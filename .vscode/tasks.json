{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build run",
            "type": "shell",
            "command": "C:/Users/Owner/Desktop/GitHub/visualboyadvance-m.exe ./Project.gba",
            // add the visualboyadvance-m.exe exact path to the above line, before "./Project.gba"! 
            // Make sure there is a space between the exact path and "./Project.gba".
            "problemMatcher": [],
            "dependsOn": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "docker run --rm -it -v \"${PWD}:/gba\" aaaronic/gba-compiler:1.0",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "docker run --rm -it -v \"${PWD}:/gba\" aaaronic/gba-compiler:1.0 bash -c 'cd /gba && make clean'",
            "problemMatcher": []
        }
    ]
  }
